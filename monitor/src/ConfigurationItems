/* Syntax: item(name, type, default-value, description).
    type can be Boolean, String, or Integer.
    Examples:
    item("help", Boolean, "false", "Displays a help message.")
    item("search-path", String, "modules/",
    	"Sets the path to search for modules.")
*/

item("help", Boolean, "false", "Displays this help message.")
item("shm-size", Integer, 4097152, "Size of the shared memory map used to transfer data between the collector interface and the monitor.")
item("search-path", String, "modules/", "The path to search for module libraries. Separate directories with colons.")
item("modules", String, "", "A comma-separated list of modules to load for data collection.")
item("tcp-port", Integer, 6321, "The TCP port to listen on, when TCP network communication is enabled.")
item("network-wait", Integer, 1, "The amount of client connections to wait for. Execution will commence once all clients have connected.")
item("log-file", String, "", "If specified, logs the data to this file so visualizations can be re-constructed." /* %p is replaced with the PID of the monitored program."*/)

